<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_init_native_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Init Native"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/id_start_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="start"
        app:layout_constraintLeft_toLeftOf="@+id/id_init_native_btn"
        app:layout_constraintRight_toRightOf="@+id/id_init_native_btn"
        app:layout_constraintTop_toBottomOf="@+id/id_init_native_btn"
        />
    <Button
        android:id="@+id/id_stop_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="stop"
        app:layout_constraintLeft_toLeftOf="@+id/id_start_btn"
        app:layout_constraintRight_toRightOf="@+id/id_start_btn"
        app:layout_constraintTop_toBottomOf="@+id/id_start_btn"
        />
    <Button
        android:id="@+id/id_recycle_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="recycle"
        android:onClick="recycler"
        app:layout_constraintLeft_toLeftOf="@+id/id_stop_btn"
        app:layout_constraintRight_toRightOf="@+id/id_stop_btn"
        app:layout_constraintTop_toBottomOf="@+id/id_stop_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>